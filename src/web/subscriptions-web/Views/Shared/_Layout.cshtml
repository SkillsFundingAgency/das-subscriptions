@using Esfa.Recruit.Subscriptions.Web.Configuration;
@using Esfa.Recruit.Subscriptions.Web.Configuration.Routing;
@functions
{
public bool ParseHideNavFromViewBag()
{
    if (ViewBag.ShowNav is bool)
    {
        return ViewBag.ShowNav;
    }

    return true;
}

public string GetTitle()
{
    const string defaultTitle = "Subscriptions";
    if (ViewBag.Title != null)
        return $"{defaultTitle} | {ViewBag.Title}";

    return defaultTitle;
}

public bool IsErrorPage()
{
    if (ViewBag.IsErrorPage is bool)
    {
        return ViewBag.IsErrorPage;
    }

    return false;
}
}
